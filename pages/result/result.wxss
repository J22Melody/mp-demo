page {
  font-family: -apple-system,BlinkMacSystemFont,Helvetica Neue,PingFang SC,Microsoft YaHei,Source Han Sans SC,Noto Sans CJK SC,WenQuanYi Micro Hei,sans-serif;
}

.main-wrapper {
  position: relative;
  background: #ED1C10;
}

.main-wrapper--highDevice {
  padding-top: 70px;
}

.main {
  position: relative;
  text-align: center;
  overflow: hidden;
}

.back {
  position: absolute;
  z-index: 10;
  top: 6px;
  left: 6px;
  width: 82px;
  height: 76px;
  padding: 0;
  background: transparent;
  border: none;
  border-radius: 0;
}

.back image {
  width: inherit;
  height: inherit;
}

.main-wrapper--highDevice .back {
  top: 16px;
}

.share {
  position: absolute;
  z-index: 10;
  top: 6px;
  right: 6px;
  width: 60px;
  height: 60px;
  padding: 0;
  background: transparent;
  border: none;
  border-radius: 0;
}

.share::after {
  border: none;
}

.share image {
  width: inherit;
  height: inherit;
}

.main-wrapper--highDevice .share {
  top: 16px;
}

.firework {
  position: absolute;
  z-index: 10;
  top: 0;
  left: 50%;
  width: 59px;
  height: 58px;
}

.envelope {
  display: block;
  margin: 0 auto;
  width: 375px;
  max-width: 100vw;
  height: 220px;
}

.content {
  position: absolute;
  top: 0;
  z-index: 2;
  width: 100%;
}

.title {
  margin-top: 54px;
  font-size: 15px;
  color: #fff;
}

.coupon {
  margin-top: 6px;
  color: #E4393C;
}

.coupon-amount {
  font-size: 32px;
  font-weight: 500; 
}

.coupon-small {
  font-size: 18px;
}

.coupon-threshold {
  margin-top: -4px;
  font-size: 14px;
}

.thanks {
  margin-top: 78px;
  margin-bottom: 18px;
  font-size: 28px;
  font-weight: 500;
  color: #E4393C;
}

.action {
  display: inline-block;
  margin-top: 18px;
  padding: 6px 30px;
  background: #FFD200;
  border-radius: 2px;
  box-shadow: #D94139 0 0 6px 0;
  color: #fff;
  font-size: 18px;
}

.add {
  margin-top: 8px;
  font-size: 14px;
  color: #FFEABD;
}

.rules {
  margin: 8px 8px;
  padding-top: 8px;
  border: 1px solid #FCBB30;
  border-radius: 4px;
  font-size: 13px;
  color: #D27F00;
  text-align: left;
  line-height: 1.67;
}

.rule {
  padding: 0 14px 6px;
}

.rules--collapse .rule {
  height: 64px;
  overflow: hidden;
}

.rule-name {
  margin-bottom: 2px;
  text-align: center;
  font-size: 14px;
  font-weight: 500;
}

.rule-more {
  font-size: 14px;
  font-weight: 500;
  color: #D27F00;
  background: #FFFCE4;
}

.rule-more::after {
  border: none;
  border-top-right-radius: 0;
  border-top-left-radius: 0;
}

.rule-empty {
  margin: 16px 0 20px;
  font-size: 16px;
  font-weight: 500;
  color: #D27F00;
  text-align: center;
}

.more-coupon {
  position: relative;
  display: flex;
  justify-content: space-around;
  margin-bottom: 8px;
  height: 38px;
  text-align: center;
}

.more-coupon-bg {
  width: 357px;
  height: 34px;
}

.more-coupon-text {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  display: block;
  width: 200px;
  font-size: 15px;
  font-weight: 600;
  line-height: 34px;
  color: #fff;
}

.footer {
  display: flex;
  justify-content: space-between;
  padding: 0 8px 8px;
}

.footer-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: calc((100vw - 2 * 8px - 5px) / 35 * 23);
}

.footer-right {
  width: calc((100vw - 2 * 8px - 5px) / 35 * 12);
}

.banner {
  display: block;
  width: inherit;
}

.banner image {
  display: block;
  width: inherit;
}