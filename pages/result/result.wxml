<view class="main-wrapper {{highDevice ? 'main-wrapper--highDevice' : ''}}">
  <navigator class="back" url="/pages/landing/landing">
    <image src="./images/88.png"></image>
  </navigator>

  <button class="share" open-type="share">
    <image src="./images/share.png"></image>
  </button>

  <image wx-if="{{highDevice}}" class="firework" src="./images/fireworks.png"></image>

  <view class="main">
    <image class="envelope" src="./images/envelope{{ coupon ? '' : '-empty' }}.png" mode="scaleToFill"></image>
    
    <view wx:if="{{coupon}}" class="content">
      <view class="title">
        {{coupon.couponName}}
      </view>

      <view class="coupon">
        <view class="coupon-amount"><text class="coupon-small">￥</text>{{coupon.couponValue / 100}}</view>
        <view class="coupon-threshold">满 ￥{{coupon.couponMininum / 100}} 元可用</view>
      </view>

      <navigator class="action" url="/pages/cart/cart">
        立即使用
      </navigator>

      <view class="add">
        您可点击微信通知添加到卡包
      </view>
    </view>

    <view wx:if="{{!coupon}}" class="content">
      <view class="thanks">
        感谢参与
      </view>

      <navigator class="action" url="/pages/cart/cart">
        我知道了
      </navigator>

      <view class="add">
        请点击下方的横幅来获得其他的优惠券吧～
      </view>
    </view>
  </view>
</view>

<view class="rules {{collapse ? 'rules--collapse' : ''}}">
  <view wx:if="{{coupon}}" class="rule">
    <view class="rule-name">使用须知</view>
    <text>{{coupon.couponDesc}}</text>
  </view>

  <button wx:if="{{coupon}}" class="rule-more" bindtap="onClickMore">
    <block wx:if="{{collapse}}">
      查看更多
    </block>
    <block wx:else>
      收起
    </block>
  </button>

  <view wx:if="{{!coupon}}" class="rule-empty">
    <view>今天没有抽到优惠券哦</view>
    明天再来试试吧～
  </view>
</view>

<view class="more-coupon">
  <image class="more-coupon-bg" src="./images/more-coupon.png"></image>

  <text class="more-coupon-text">{{more}}</text>
</view>

<view class="footer">
  <view class="footer-left">
    <navigator bindtap="onClickLink1" class="banner" target="miniProgram" app-id="wxcdc13dc8495e174e" path="/pages/activityH5/activityH5?redirectUrl=https://pro.m.jd.com/mini/active/3d34Pm49obpjLEdhhagSZuM5QrwC/index.html?wxAppName=Kepler&wxAppId=wxcdc13dc8495e174e&siteId=WXAPP-JA2016-1">
      <image src="https://mco-image-stage.walmartmobile.cn/image/jd.png" mode="widthFix"></image>
    </navigator>
    <navigator bindtap="onClickLink2" class="banner" target="miniProgram" app-id="wxffb7d80f8c50ac5c" path="/pages/home/home?activityId=114310&type=12&&business=107">
      <image src="https://mco-image-stage.walmartmobile.cn/image/jddj.png" mode="widthFix"></image>
    </navigator>
  </view>

  <view class="footer-right">
    <navigator bindtap="onClickLink1" class="footer-right banner" target="miniProgram" app-id="wxcdc13dc8495e174e" path="/pages/activityH5/activityH5?redirectUrl=https://pro.m.jd.com/mini/active/3d34Pm49obpjLEdhhagSZuM5QrwC/index.html?wxAppName=Kepler&wxAppId=wxcdc13dc8495e174e&siteId=WXAPP-JA2016-1">
