<view class="main">
  <image class="bg" src="./images/bg.png" mode="widthFix"></image>
  <image class="envelope" src="./images/envelope.png"></image>

  <button class="share" open-type="share">
    <image src="./images/share.png"></image>
    <text>分享给好友</text>
  </button>
  
  <view wx:if="{{coupon.omniCouponType !== 'NO_COUPON'}}" class="content">
    <view class="title">
      <block wx:if="{{coupon.omniCouponType === 'scan'}}">
        <image class="icon" src="./images/icon-scan.png" mode="center"></image>
        {{coupon.couponName}}
      </block>

      <block wx:if="{{coupon.omniCouponType === 'WALMART'}}">
        <image class="icon" src="./images/icon-walmart.png" mode="center"></image>
        {{coupon.couponName}}
      </block>
    </view>

    <view class="coupon">
      <view>￥{{coupon.couponValue / 100}}</view>
      <view class="coupon-threshold">满 ￥{{coupon.couponMininum / 100}} 元可用</view>
    </view>

    <view class="rules">
      <view class="rule"><text class="rule-name">使用须知：</text><text>{{coupon.notice}}</text></view>
      <view class="rule"><text class="rule-name">使用期限：</text><text>{{coupon.deadline}}</text></view>
    </view>

    <navigator class="action" url="/pages/index/index">
      立即使用
    </navigator>

    <view class="add">
      您可点击微信通知添加到卡包
    </view>
  </view>

  <view wx:if="{{coupon.omniCouponType === 'NO_COUPON'}}" class="content">
    <view class="title">
      <image class="icon" src="./images/icon-walmart.png" mode="center"></image>
    </view>

    <view class="coupon">
      感谢参与
    </view>

    <view class="result">
      <view>今天没有抽到优惠券</view>
      <view>明天再来试试吧~</view>
    </view>

    <navigator class="action" url="/pages/index/index">
      我知道了
    </navigator>
  </view>
</view>

<view class="more-coupon">
  <view class="semicircle" />
  <view class="semicircle" />
  <view class="semicircle" />

  <image class="more-coupon-bg" src="./images/more-coupon.png"></image>

  <view class="semicircle" />
  <view class="semicircle" />
  <view class="semicircle" />

  <text class="more-coupon-text">更多优惠券在这里哦</text>
</view>

<view class="footer">
  <navigator class="banner" target="miniProgram" app-id="wx8106a5868f26d656">
    <image src="./images/banner1.png"></image>
  </navigator>
  <navigator class="banner" url="/pages/index/index">
    <image src="./images/banner2.png"></image>
  </navigator>
  <navigator class="banner" url="/pages/index/index">
    <image src="./images/banner3.png"></image>
  </navigator>
</view>